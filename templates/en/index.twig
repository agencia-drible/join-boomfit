          <div id="map" data-lat="41.3731315" data-long="-8.544687199999998"></div>
        </div>
      </div>
    </div>
    <div class="container">
      <div class="col-md-5 col-sm-12">
        <div class="title text-center">
          <h1>Ask for more information!</h1>
          <h4 class="upper">Let's work together.</h4>
          <hr>
        </div>
        <div class="section-content">
          {% macro errorList(errors) %}
          {% if errors %}
          <ul class="errors">
            {% for error in errors %}
            <li>{{ error }}</li>
            {% endfor %}
          </ul>
          {% endif %}
          {% endmacro %}
          {% from _self import errorList %}

          <!-- MENSAGENS  -->
          {% if craft.app.session.hasFlash('wheelformSuccess') %}
          <p class="message success text-center bg-danger text-white">Thank You! we will review your submission shortly.</p>
          {% elseif craft.app.session.hasFlash('wheelformError') %}
          <p class="message error text-center  bg-danger text-white">Ocorreu um erro :(</p>
          {% endif %}

          {{ wheelformErrors['form'] is defined ? errorList(wheelformErrors['form']) }}
          <form method="post" action="" accept-charset="UTF-8" novalidate="" enctype="multipart/form-data">
            {{ csrfInput() }}
            <input type="hidden" name="action" value="wheelform/message/send">
            <input type="hidden" name="form_id" value="3">
            <input type="hidden" name="redirect" value="{{ '/en/#contacts'|hash }}">

            <!-- NOME -->
            <input class="form-control" placeholder="Nome" name="field_1" type="text" id="name" value="{{ values['field_1'] ?? '' }}">
            {{ wheelformErrors['field_1'] is defined ? errorList(wheelformErrors['field_1']) }}

            <!-- TELEMOVEL -->
            <input class="form-control" placeholder="Mobile Phone" name="field_3" type="email" id="email" value="{{ values['field_3'] ?? '' }}">
            {{ wheelformErrors['field_3'] is defined ? errorList(wheelformErrors['field_3']) }}

            <!-- EMAIL -->
            <input class="form-control" placeholder="Email" name="field_2" type="text" id="phone-number" value="{{ values['field_2'] ?? '' }}">
            {{ wheelformErrors['field_2'] is defined ? errorList(wheelformErrors['field_2']) }}

            <!-- LOCALIDADE -->
            <input class="form-control" placeholder="Local" name="field_4" type="text" id="city-id" value="{{ values['field_4'] ?? '' }}">
            {{ wheelformErrors['field_4'] is defined ? errorList(wheelformErrors['field_4']) }}

            <!-- MENSAGEM -->              <textarea class="form-control" placeholder="Write here your message" name="field_5" id="custom-data">{{ values['field_5'] ?? '' }}</textarea>
            {{ wheelformErrors['field_5'] is defined ? errorList(wheelformErrors['field_5']) }}

            <!-- Consent -->
            <br>
            <p class="consent-copy">Your data are duly referred to by World Fit Online Ltd., For commercial purposes, within 60 days of the validation of the promotion.</p>
            <p class="consent-copy">I agree to contact the company World Fit Online, to send your information, offers and promotions, for 24 months or 24 months after the last contact, through:</p>

            <!-- checkbox E-mail -->
            <div class="input checkbox">
              <input type="hidden" name="field_7" value="{{ values['field_7'] ?? '0' }}">
              <label for="lead-opt-in-email">
                <input type="checkbox" name="field_7" value="{{ values['field_7'] ?? '1' }}" id="lead-opt-in-email">EMAIL</label>
              </div>

              <!-- checkbox SMS -->
              <div class="input checkbox">
